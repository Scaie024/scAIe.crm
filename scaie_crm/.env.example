# Example environment configuration for scaie_crm
# Copy to .env and fill with your secrets

# Database
DATABASE_URL=sqlite:///./scaie.db

# Security
SECRET_KEY=change_me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM (DashScope / Qwen)
DASHSCOPE_API_KEY=your_dashscope_api_key
QWEN_MODEL=qwen-plus
TEMPERATURE=0.8
MAX_TOKENS=1024
TOP_P=0.9
TOP_K=30

# Telegram Bot (optional if you use the bot)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# WhatsApp Cloud API (optional if you use WhatsApp)
WHATSAPP_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=choose_a_verify_token

# Frontend origin for CORS (optional)
# FRONTEND_ORIGIN=http://localhost:5173
